@model MyProject_Website.Models.TriangleCalculator
@{
    ViewBag.Title = "Calculator Page";
}

@using (Ajax.BeginForm("CalculationResult", "Home", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "result"
    }))
{
    @Html.EditorFor(x => x.sideA)
    @Html.EditorFor(x => x.sideB)
    @Html.EditorFor(x => x.sideC)
    @Html.EditorFor(x => x.angleA)
    @Html.EditorFor(x => x.angleB)
    @Html.EditorFor(x => x.angleC)
    <input type="submit" value="Calculate" class="btn btn-default" />
}

@Html.Partial("CalculationResult")